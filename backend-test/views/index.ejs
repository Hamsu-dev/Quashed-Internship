<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quashed Backend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>ShortLink</h1>
        <form action="/shortUrls" method="POST" class="my-4">
            <div class="mb-3">
                <label for="fullUrl" class="sr-only">URL</label>
                <input required type="url" class="form-control mr-2" id="url" name="url" placeholder="https://example.com">
            </div>
                <button type="submit" class="btn btn-success">Shrink</button>
        </form>
        </form>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %>" target="_blank" rel="noopener noreferrer">
                                <%= shortUrl.full %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.short %>" target="_blank" rel="noopener noreferrer">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                    </tr>
                    </tr>)
                <tr>
                    <td>
                        <a href="https://quashed.co.nz/" target="_blank">https://quashed.co.nz/</a>
                    </td>
                    <td>
                        <a href="/12345">12345</a>
                    </td>
                    <td>
                        100 Clicks
                    </td>
            </tbody>
        </table>
    </div>  
</body>
</html>